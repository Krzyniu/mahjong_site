<div class="container text-center">

 
<h1>Ligi</h1>


<div class="row">
  <% @leagues.each do |league| %>
      <div class="col-lg-12">
        <div class="card border-dark">
            <div class="card-body">
                <h2 class="card-title border bg-light"><%= league.name %></h2>
                <div>
                    <div class="p-2">

                        <div class="row border bg-light">
                            <div class="col-sm-4">Gracz</div>
                            <div class="col-sm">Suma wynik√≥w</div>
                        </div>

                        <% @league_scores[league.id].each_key do |key| %>
                            <div class="row">
                                <%if User.find(key).username.blank?%>
                                    <div class="col-sm-4 border bg-light"><%= User.find(key).email%></div>
                                <%else%>
                                    <div class="col-sm-4 border bg-light"><%= User.find(key).username%></div>
                                <%end%>
                                <div class="col-sm"><%= @league_scores[league.id][key] %></div>
                            </div>
                        <%end%>
                        
                    </div>
                </div>
            </div>
        </div>
      </div>
  <% end %>
</div>
 

</div>