<%= form_with model: @league, local: true do |form| %>
<div class="container bootstrap snippet">
    <h1 class="text-primary"><span class="glyphicon glyphicon-user"></span>Edytuj ligę</h1>
      <hr>
	<div class="row">
      
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <h3>Informacje o lidze</h3>
        
        <form class="form-horizontal" role="form">

          <div class="form-group">
            <label class="col-lg-3 control-label">Nazwa ligi:</label>
            <div class="col-lg-8">
              <%= form.text_field :name, class:"form-control" %>
            </div>
            <label class="col-lg-3 control-label">Tło:</label>
            <div class="col-lg-8">
              <%= form.file_field :image %>
            </div>
          </div>

          <div class="col-lg-8">
            <%= form.submit class:"form-control" %>
          </div>
        </form>
      </div>
  </div>
</div>
<hr>
<% end %>